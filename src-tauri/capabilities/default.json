{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:write-all",
    {
      "identifier": "fs:scope-appdata",
      "allow": [{ "path": "$APPDATA/**" }]
    }
  ]
}